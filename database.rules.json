{
  "rules": {
    "chat_messages": {
      "clans": {
        "$clanId": {
          ".indexOn": ["ts"],
          ".read": "auth != null && root.child('presence/online').child(auth.uid).child('clanId').val() === $clanId",
          ".write": false
        }
      },
      "global": {
        "$roomId": {
          ".indexOn": ["ts"],
          ".read": "auth != null && root.child('presence/online').child(auth.uid).child('roomId').val() === $roomId",
          ".write": false
        }
      }
    },
    "presence": {
      "online": {
        "$uid": {
          ".write": "auth != null && auth.uid === $uid",
          ".read": "auth != null"
        }
      }
    }
  }
}
